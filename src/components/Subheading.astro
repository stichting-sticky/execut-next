---
type Props = {
  anchor?: string;
};

const { anchor } = Astro.props;
---

<h2 class="text-primary-lighter mb-2 font-mono text-3xl font-bold before:content-['==_'] lg:mb-4 lg:text-4xl">
  {anchor && (
    <a class="decoration-primary-highlight decoration-4 underline-offset-4 hover:underline" href={anchor}><slot /></a>
  )}

  {!anchor && <slot />}
</h2>
