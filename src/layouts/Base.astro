---
import { type HTMLAttributes } from "astro/types";

import "@fontsource/poppins";
import "@fontsource/space-mono";

import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";

import "@styles/global.css";

import { current } from "@content";

type Props = HTMLAttributes<"body"> & {
  title?: string;
  year?: string;
};

const {
  title = "A conference for and by IT students",
  year = current.id,
  ...attributes
} = Astro.props;

const keywords = [
  "exec(ut)",
  "execut",
  "execute",
  "conference",
  "congress",
  "symposium",
  "Utrecht",
  "stichting",
  "studie",
  "studievereniging",
  "Sticky",
  "IT",
  "tech",
  "technology",
  "software",
  "student",
  "students",
  "computer",
  "information",
  "science",
  "sciences",
  "university",
];
---

<html lang="en" class="selection:bg-primary-lighter selection:text-background selection:dark:bg-tertiary text-foreground dark:text-background-darker antialiased">

<head>
  <meta charset="utf-8" />

  <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
  <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
  <link rel="apple-touch-icon" href="/icon-180x180.png" />

  <link rel="manifest" href="/manifest.json" />

  <meta name="viewport" content="width=device-width,initial-scale=1" />

  <meta name="theme-color" content="oklch(72.3% 0.172 20.7)" />
  <meta name="color-scheme" content="light dark" />

  <meta name="author" content="Stichting Sticky" />
  <meta name="keywords" content={keywords.join()} />
  <meta name="description" content="exec(ut) is a conference for and by IT students" />

  <meta name="generator" content={Astro.generator} />

  <link rel="canonical" href={new URL(Astro.url.pathname, Astro.site)} />
  <link rel="sitemap" href="/sitemap-index.xml" />

  <title>{`${title} | exec(ut) ${year}`}</title>
</head>

<body class:list={["bg-background dark:bg-foreground-lighter flex min-h-screen flex-col", attributes.class]} {...attributes}>
  <Header />

  <slot />

  <Footer />
</body>

</html>
