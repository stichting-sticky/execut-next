---
import Layout from "@layouts/Base.astro";

import Container from "@components/Container.astro";

type Props = {
  message: string;
  status: string;
};

const { message, status } = Astro.props;
---

<Layout class="bg-primary dark:bg-foreground text-background flex min-h-screen flex-col justify-center">
  <Container>
    <code class="bg-primary-lighter dark:bg-foreground-lighter before:content-['`'] after:content-['`']">{status}</code>
    <h1 class="mb-4 text-7xl sm:mb-8 sm:text-8xl">{message}</h1>

    <a class="link text-background" href="/">%= go back home</a>
  </Container>
</Layout>
